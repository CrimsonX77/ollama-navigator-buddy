{
  "ollama": {
    "model": "llama3",
    "host": "http://localhost:11434",
    "temperature": 0.7,
    "context_length": 4096,
    "timeout": 30000
  },
  "filesystem": {
    "allowed_paths": [
      "~/Documents",
      "~/Projects"
    ],
    "excluded_patterns": [
      "node_modules",
      ".git",
      "__pycache__",
      ".env",
      "*.pyc",
      ".DS_Store"
    ],
    "max_depth": 10,
    "max_file_size_mb": 50,
    "follow_symlinks": false
  },
  "security": {
    "enable_file_operations": true,
    "require_confirmation": true,
    "restricted_operations": [
      "delete",
      "execute",
      "move"
    ],
    "allowed_operations": [
      "read",
      "search",
      "list"
    ],
    "enable_audit_log": true,
    "sandbox_mode": true
  },
  "interface": {
    "type": "cli",
    "theme": "default",
    "verbosity": "normal",
    "show_reasoning": true,
    "max_results": 50
  },
  "performance": {
    "enable_caching": true,
    "cache_ttl_seconds": 3600,
    "index_on_startup": false,
    "max_concurrent_operations": 5
  },
  "logging": {
    "level": "info",
    "log_to_file": true,
    "log_file_path": "./logs/navigator.log",
    "max_log_size_mb": 10,
    "rotate_logs": true
  }
}
